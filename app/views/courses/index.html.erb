<div class="div-inner">
<div class="title-div"><h3>All Courses</h3></div>
<div class="table-div">



<div class="add-btn-div"><a class="add-cohort" href="/courses/new"><i class="fas fa-plus"></i>Add Course</a></div>

<div class="course-container">



<% @courses.each do |course|%>
    <div class="course-div">
    <div><a href="/courses/<%=course.id%>"><img src="https://via.placeholder.com/250x170"></a></div>

    <div class="course-main-about">
    <div class="course-heading"><h3><%=course.name%></h3></div>
    <div><p>Hours: <%=course.hours%></p></div>
    <div class="read-div"><a class="read-more" href="/courses/<%=course.id%>">Read More</a></div>
   </div>

   </div>
<% end %>

</div>
</div>

</div>

</div>

</div>