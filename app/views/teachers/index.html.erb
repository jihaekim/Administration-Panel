<div class="div-inner">
<div class="title-div"><h3>All Teachers</h3></div>
<div class="table-div">



<div class="add-btn-div"><a class="add-cohort" href="/teachers/new"><i class="fas fa-plus"></i>Add Teacher</a></div>

<div class="course-container">



<% @teachers.each do |teacher|%>
    <div class="course-div">
    <div><a href="/teachers/<%=teacher.id%>"><img src="https://via.placeholder.com/231x150"></a></div>

    <div>
    <div><%=teacher.fname%> <%=teacher.lname%></div>
    <div><%=teacher.age%></div>
    
    <%teacher_cohorts = @cohorts.where(teacher_id: teacher.id)%>
    <div>
        
         <p>Cohorts:</p>
         <ul>
    <%teacher_cohorts.each do |cohort|%>
 
      <li><%=cohort.name%></li>
    
    <%end%>
       </ul>
     </div>   
    <div><a href="/teachers/<%=teacher.id%>/edit"><i class="far fa-edit"></i></a></div>
   </div>

   </div>
<% end %>

</div>
</div>

</div>

</div>

</div>