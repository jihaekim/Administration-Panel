<div class="div-inner">
<div class="title-div"><h3>All Teachers</h3></div>
<div class="table-div">



<div class="add-btn-div"><a class="add-cohort" href="/teachers/new"><i class="fas fa-plus"></i>Add Teacher</a></div>

<div class="course-container">



<% @teachers.each do |teacher|%>
    <div class="course-div">

    <div class="teacher-border">
    <div class="profile-img-div"><a href="/teachers/<%=teacher.id%>"><img src="<%=teacher.pic_url%>"></a></div>
    </div>

    <div class="teacher-info">
    <div><h3><%=teacher.fname%> <%=teacher.lname%></h3></div>  
    <div><%=teacher.email%></div>
    <div><%=number_to_phone(teacher.phone_number)%></div>
     <div class="read-div"><a class="teacher-read-more"href="/teachers/<%=teacher.id%>">Read More</a></div>
    
   </div>

   </div>
<% end %>

</div>
</div>

</div>

</div>

</div>