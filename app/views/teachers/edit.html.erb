<div class="div-inner">
<div class="title-div"><h3>Edit Teacher</h3></div>
<div class="table-div">
<div class="form-title-div"><h3>Teacher Details</h3></div>
<hr>



<%= form_with model: @teacher do |form| %>
    <div class="new-form-div">

    <div class="form-flex">
    <div class="form-inner">
    <div class="new-input-div"><div><p>First Name</p></div><%= form.text_field :fname ,required: true%></div>
    <div class="new-input-div"><div><p>Age</p></div><%= form.number_field :age, in: 1...151 ,required: true%></div>
    <div class="new-input-div"><div><p>Salary</p></div><%= form.number_field :salary, min: 1,required: true %></div>
    <div class="new-input-div"><div><p>Education</p></div><%= form.select :education, ['High School','College','Masters','PHD'] ,required: true%></div>
   </div>
   
   <div class="form-inner">
    <div class="new-input-div"><div><p>Last Name</p></div><%= form.text_field :lname ,required: true%></div>
    <div class="new-input-div"><div><p>Phone Number</p></div><%= form.telephone_field :phone_number,required: true %></div>
    <div class="new-input-div"><div><p>Email</p></div><%= form.email_field :email,required: true%></div>
    <div class="new-input-div"><div><p>Picture</p></div><%= form.text_field :pic_url%></div>
   </div>
   </div>
   
    <div class="new-submit"><%= form.submit %></div>
   
   <% end %>
   
   </div>
   </div>
   </div>